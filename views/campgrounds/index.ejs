<% include ../partials/header %> 


<section class="pgcontent">
     <header class="jumbotron">
         <div class="container row">


          <div class="col-md-4 col-xs-6">

             <img alt="mascot" src="/img/bantu.png" id="mascot">

          </div>

          <div class="col-md-8 col-xs-12">

             <h2>FIND YOUR OUTDOOR ADVENTURE!</h2>       

             <p>
              <form action="/campgrounds" method="GET" class="form-inline">
               <div class="form-group">
                   <input type="text" name="search" placeholder="Campground search..." class="form-control">
                   <input type="submit" value="Search" class="btn btn-default">
               </div>
              </form>
             </p>

             <p>

             <% if(currentUser && currentUser.isAdmin){ %>

             <div class="well well-sm">

             <span class="dbtables">DATABASE TABLES:</span>
             <a class="btn btn-primary btn-large" href="/campgroundtable">Campgrounds</a>

             <a class="btn btn-primary btn-large" href="/commenttable">Comments</a>

             <a class="btn btn-primary btn-large" href="/usertable">Users</a>
            
            </div>    

             <% } %>

                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
             </p>

          </div>
             
         </div>
     </header>


     <hr>

     <div class="container">
     <div class="row text-center display-flex">

      <div class="col-md-12">
             <% if(noMatch !== null) { %>
             <h3><%= noMatch %></h3>
             <p>
              <form action="/campgrounds" method="GET" class="form-inline">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Campground search..." class="form-control">
                  <input type="submit" value="Search" class="btn btn-default">
                </div>
              </form>
            </p>
             <% } %>
         </div>

        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-12">
                <div class="thumbnail th-index">
                   <img src="<%= campground.image %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
    </div>

</section>

<% include ../partials/footer %>
